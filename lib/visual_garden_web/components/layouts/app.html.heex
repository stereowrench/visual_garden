<ul class="relative z-10 flex items-center gap-4 px-4 sm:px-6 lg:px-8 justify-end">
  <%= if @current_user do %>
    <li>
      <.link
        href="https://discord.gg/r8pePh8RM4"
        class="text-[0.8125rem] leading-6 text-zinc-900 font-semibold hover:text-zinc-700"
      >
        Discord
      </.link>
    </li>
    <li>
      <.link
        href="https://forum.stereowrench.com/c/visual-garden/6"
        class="text-[0.8125rem] leading-6 text-zinc-900 font-semibold hover:text-zinc-700"
      >
        Forum
      </.link>
    </li>
    <li class="text-[0.8125rem] leading-6 text-zinc-900">
      <%= @current_user.email %>
    </li>
    <li>
      <.link
        href={~p"/users/settings"}
        class="text-[0.8125rem] leading-6 text-zinc-900 font-semibold hover:text-zinc-700"
      >
        Settings
      </.link>
    </li>
    <li>
      <.link
        href={~p"/users/log_out"}
        method="delete"
        class="text-[0.8125rem] leading-6 text-zinc-900 font-semibold hover:text-zinc-700"
      >
        Log out
      </.link>
    </li>
  <% else %>
    <li>
      <.link
        href={~p"/users/register"}
        class="text-[0.8125rem] leading-6 text-zinc-900 font-semibold hover:text-zinc-700"
      >
        Register
      </.link>
    </li>
    <li>
      <.link
        href={~p"/users/log_in"}
        class="text-[0.8125rem] leading-6 text-zinc-900 font-semibold hover:text-zinc-700"
      >
        Log in
      </.link>
    </li>
  <% end %>
  <%= if @current_user do %>
    <li>
      <div
        class="text-[0.8125rem] leading-6 text-zinc-900 font-semibold hover:text-zinc-700"
        id="notification-enable"
        phx-hook="Notifications"
        style="display: none;"
      >
        Enable notifications
      </div>
    </li>
  <% end %>
</ul>

<div id="main-sidebar" phx-hook="Sidebar">
  <!-- Off-canvas menu for mobile, show/hide based on off-canvas menu state. -->
  <div
    id="off-canvas"
    style="display:none"
    class="relative lg:hidden"
    role="dialog"
    aria-modal="true"
  >
    <div
      id="menu-backdrop"
      class="transition-opacity ease-linear duration-300 fixed inset-0 bg-gray-900/80 opacity-0"
    >
    </div>

    <div class="fixed inset-0 flex">
      <div
        class="relative mr-16 flex w-full max-w-xs flex-1 transition ease-in-out duration-300 transform -translate-x-full"
        id="off-canvas-menu"
      >
        <div
          id="close-sidebar"
          class="ease-in-out duration-300 absolute left-full top-0 flex w-16 justify-center pt-5 opacity-0"
        >
          <button type="button" class="-m-2.5 p-2.5">
            <span class="sr-only">Close sidebar</span>
            <svg
              class="h-6 w-6 text-white"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              aria-hidden="true"
            >
              <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>

        <div class="flex grow flex-col gap-y-5 overflow-y-auto bg-white px-6 pb-2">
          <div class="flex h-16 shrink-0 items-center">
            <img class="h-8 w-auto" src={~p"/images/logo.jpeg"} alt="StereoWrench VisualGarden" />
          </div>
          <nav class="flex flex-1 flex-col">
            <ul role="list" class="flex flex-1 flex-col gap-y-7">
              <li>
                <ul role="list" class="-mx-2 space-y-1">
                  <li>
                    <!-- Current: "bg-gray-50 text-indigo-600", Default: "text-gray-700 hover:text-indigo-600 hover:bg-gray-50" -->
                    <.nav_link
                      active={@active_tab}
                      name={:home}
                      path={~p"/home"}
                      text="Home"
                      icon="hero-home"
                    />
                  </li>
                </ul>
                <ul class="-mx-2 space-y-1">
                  <li>
                    <!-- Current: "bg-gray-50 text-indigo-600", Default: "text-gray-700 hover:text-indigo-600 hover:bg-gray-50" -->
                    <.nav_link
                      active={@active_tab}
                      name={:library}
                      path={~p"/regions"}
                      text="Library"
                      icon="hero-building-library"
                    />
                  </li>
                </ul>
              </li>
              <li>
                <ul class="-mx-2 space-y-1">
                  <div class="text-xs font-semibold leading-6 text-gray-400">Your Gardens</div>

                  <li>
                    <!-- Current: "bg-gray-50 text-indigo-600", Default: "text-gray-700 hover:text-indigo-600 hover:bg-gray-50" -->
                    <.nav_link
                      active={@active_tab}
                      name={:planner}
                      path={~p"/planners"}
                      text="Planner"
                      icon="hero-presentation-chart-line"
                    />
                  </li>
                  <li>
                    <!-- Current: "bg-gray-50 text-indigo-600", Default: "text-gray-700 hover:text-indigo-600 hover:bg-gray-50" -->
                    <.nav_link
                      active={@active_tab}
                      name={:gardens}
                      path={~p"/gardens"}
                      text="Gardens"
                      icon="hero-globe-americas"
                    />
                  </li>
                </ul>
              </li>
            </ul>
          </nav>
        </div>
      </div>
    </div>
  </div>
  <!-- Static sidebar for desktop -->
  <div class="hidden lg:fixed lg:inset-y-0 lg:z-50 lg:flex lg:w-72 lg:flex-col">
    <!-- Sidebar component, swap this element with another sidebar if you like -->
    <div class="flex grow flex-col gap-y-5 overflow-y-auto border-r border-eagle-200 bg-eagle-50 px-6">
      <div class="flex h-16 shrink-0 items-center">
        <img class="h-8 w-auto" src={~p"/images/logo.jpeg"} alt="StereoWrench VisualGarden" />
      </div>
      <nav class="flex flex-1 flex-col">
        <ul role="list" class="flex flex-1 flex-col gap-y-7">
          <li>
            <ul role="list" class="-mx-2 space-y-1">
              <li>
                <.nav_link
                  active={@active_tab}
                  name={:home}
                  path={~p"/home"}
                  text="Home"
                  icon="hero-home"
                />
              </li>
            </ul>
            <ul class="-mx-2 mt-2 space-y-1">
              <li>
                <!-- Current: "bg-gray-50 text-indigo-600", Default: "text-gray-700 hover:text-indigo-600 hover:bg-gray-50" -->
                <.nav_link
                  active={@active_tab}
                  name={:library}
                  path={~p"/regions"}
                  text="Library"
                  icon="hero-building-library"
                />
              </li>
            </ul>
          </li>
          <li>
            <div class="text-xs font-semibold leading-6 text-eagle-600">Your Gardens</div>

            <ul class="-mx-2 mt-2 space-y-1">
              <li>
                <!-- Current: "bg-gray-50 text-indigo-600", Default: "text-gray-700 hover:text-indigo-600 hover:bg-gray-50" -->
                <.nav_link
                  active={@active_tab}
                  name={:planner}
                  path={~p"/planners"}
                  text="Planner"
                  icon="hero-presentation-chart-line"
                />
              </li>
              <li>
                <.nav_link
                  active={@active_tab}
                  name={:gardens}
                  path={~p"/gardens"}
                  text="Gardens"
                  icon="hero-globe-americas"
                />
              </li>
            </ul>
          </li>
          <%!-- <li class="-mx-6 mt-auto">
            <a
              href="#"
              class="flex items-center gap-x-4 px-6 py-3 text-sm font-semibold leading-6 text-gray-900 hover:bg-gray-50"
            >
              <img
                class="h-8 w-8 rounded-full bg-gray-50"
                src="https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80"
                alt=""
              />
              <span class="sr-only">Your profile</span>
              <span aria-hidden="true">Tom Cook</span>
            </a>
          </li> --%>
        </ul>
      </nav>
    </div>
  </div>

  <div class="sticky top-0 flex items-center gap-x-6 bg-white px-4 py-4 shadow-sm sm:px-6 lg:hidden">
    <button id="open-sidebar" type="button" class="-m-2.5 p-2.5 text-gray-700 lg:hidden">
      <span class="sr-only">Open sidebar</span>
      <svg
        class="h-6 w-6"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        aria-hidden="true"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"
        />
      </svg>
    </button>
    <%!-- <div class="flex-1 text-sm font-semibold leading-6 text-gray-900">Dashboard</div> --%>
    <%!-- <a href="#">
      <span class="sr-only">Your profile</span>
    </a> --%>
  </div>

  <main class="lg:pl-72">
    <div class="xl:pr-96">
      <div class="px-4 py-10 sm:px-6 lg:px-8 lg:py-6">
        <Flashy.Container.render flash={@flash} class="z-10" />

        <%= @inner_content %>

        <div class="mt-16 border-t border-white/10 pt-8 sm:mt-20 lg:mt-24">
          <footer>
            <.link navigate={~p"/privacy"}>
              Privacy Policy
            </.link>
          </footer>
        </div>
      </div>
    </div>
  </main>

  <aside class="fixed inset-y-0 right-0 hidden w-96 overflow-y-auto border-l border-eagle-200 px-4 py-6 sm:px-6 lg:px-8 xl:block">
    <%= if assigns[:page_tip] && assigns[:page_tip_title] do %>
      <div class="divide-y divide-gray-200 overflow-hidden rounded-lg bg-white shadow">
        <div class="px-4 py-5 sm:px-6 prose prose-eagle">
          <h3>
            💡 <%= assigns[:page_tip_title] %>
          </h3>
        </div>
        <div class="px-4 py-5 sm:p-6 prose prose-eagle">
          <%= assigns[:page_tip] %>
        </div>
      </div>
    <% end %>
  </aside>

  <br />
  <aside class="block xl:hidden lg:pl-72">
    <%= if assigns[:page_tip] && assigns[:page_tip_title] do %>
      <div class="divide-y divide-gray-200 overflow-hidden rounded-lg bg-white shadow">
        <div class="px-4 py-5 sm:px-6 prose prose-eagle">
          <h3>
            💡 <%= assigns[:page_tip_title] %>
          </h3>
        </div>
        <div class="px-4 py-5 sm:p-6 prose prose-eagle">
          <%= assigns[:page_tip] %>
        </div>
      </div>
    <% end %>
  </aside>
</div>
