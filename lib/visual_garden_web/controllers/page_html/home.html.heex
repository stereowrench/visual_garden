  <footer class="bg-eagle-100">
    <div class="mx-auto max-w-7xl overflow-hidden px-6 py-8 sm:py-24 lg:px-8">
      <nav class="-mb-6 columns-2 flex justify-center sm:space-x-12" aria-label="Footer">
        <div class="pb-6">
          <.link
            navigate={~p"/privacy"}
            class="text-md leading-6 text-eagle-600 hover:text-eagle-900"
          >
            Privacy Policy
          </.link>
        </div>
      </nav>
    </div>
  </footer>
</div>
